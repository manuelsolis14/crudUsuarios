{% extends 'base.html.twig' %}

{% block body %}
    <div class="content container">
        <div class="body">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="page-title">Listado de usuarios</h2>
                    <section class="widget">
                        <div class="body">

                            {{ form_start(form, { 'attr' : {'class' : 'form-horizontal'} }) }}
                            <fieldset>
                                <legend class="section"></legend>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.nombre) }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.nombre, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.apellidos) }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.apellidos, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.telefono, 'Teléfono') }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.telefono, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.direccion, 'Dirección') }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.direccion, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.sexo) }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.sexo, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.redesSociales) }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.redesSociales, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.userName) }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.userName, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.password) }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.password, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" for="max-length">{{ form_label(form.isActive) }}</label>
                                        <div class="col-sm-7">
                                            {{ form_widget(form.isActive, { 'attr' : {'class' : 'form-control input-transparent'} }) }}
                                        </div>
                                    </div>
                                </div>
                                {{ form_errors(form) }}
                            </fieldset>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-sm-offset-4 col-sm-7">
                                        <div class="btn-toolbar">
                                            <input type="submit" value="Guardar" class="btn btn-success" >
                                            <a href="{{ path('usuarios_index') }}" class="btn btn-default">Regresar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
